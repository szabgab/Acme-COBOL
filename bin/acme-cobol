#!/usr/bin/perl
use strict;
use warnings FATAL => 'all';

use lib 'lib';

use Getopt::Long qw(GetOptions);
use Acme::COBOL;
my %opt = (
    mode => 'acme',
);

GetOptions(\%opt,
    "parse_debug",
    "help",
    "mode=s",
) or usage();
usage() if $opt{help};

my $file = shift or usage();

if ($opt{mode} eq 'cobc') {
    system "cobc $file -x -o demo";
    system "./demo";
    unlink "demo";
} elsif ($opt{mode} eq 'acme') {
    my $cobol = Acme::COBOL->new(%opt);
    $cobol->run_file($file);
} else {
    die "Invalid mode '$opt{mode}'\n";
}



sub usage {
    print <<"END_USAGE";
Acme::COBOL v$Acme::COBOL::VERSION Copyright (C) Gabor Szabo

Usage: $0 FILENAME
        --help
        --parse_debug
        --mode [cobc|acme]
END_USAGE

    exit;
}

